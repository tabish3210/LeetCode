PROBLEM  NUMBER                                                                           :                                        1317. Convert Integer to the Sum of Two No-Zero Integers


// Monday, 8 September 2025


//  Brute force || MATH

class Solution {
public:
    vector<int> getNoZeroIntegers(int n) {
        auto check = [](int x) {
            while (x > 0) {
                if (x % 10 == 0) return false;
                x /= 10;
            }
            return true;
        };
        for (int i = 1; i < n; ++i) {
            int j = n - i;
            if (check(i) && check(j)) {
                return {i, j};
            }
        }
        return {};
    }
};


///////////////////////////////////////////////////////////////////////////////////////


/*  Constructive Spilt | (MATH)

Basically, use the concept of subtraction to split; when digit=0, 1, it might borrow from the next digit like subtracton.
*/

class Solution {
public:
    vector<int> getNoZeroIntegers(int n) {
        int a=0, b= 0, tens=1;
        for (; n>0; n/=10, tens*=10) {
            int d=n%10;
            if (d==0) {
                // borrow from next higher digit: 5+5
                a+=5*tens;
                b+=5*tens;
                n-=10;  // subtract from the next digit
            } 
            else if (d==1 && n>=10) {
                a+=6*tens;
                b+=5*tens;
                n-=10;  // borrow
            } 
            else {
                // normal split
                a+=(d-d/2)*tens;
                b+=(d/2)*tens;
            }
        }
        return {a, b};
    }
};

