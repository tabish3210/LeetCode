PROBLEM    NUMBER     :      1680. Concatenation of Consecutive Binary Numbers

// Saturday, 28 February 2026


//  Efficient Binary Concatenation Using Bit Manipulation and Power-of-Two Bit Tracking

class Solution {
public:
    int concatenatedBinary(int n) {
        const int MOD = 1e9 + 7;
        long long res = 0;
        int bits = 0;

        for(int i=1; i<=n; i++){
            if((i & (i-1)) == 0) bits++;
            res = ((res<<bits) | i) % MOD;
        }
        return res;
    }
};
