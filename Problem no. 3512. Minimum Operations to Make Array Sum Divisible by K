PROBLEM    NUMBER                    :                           3512. Minimum Operations to Make Array Sum Divisible by K



// Saturday, 29 November 2025


// 1 loop 

class Solution {
public:
    int minOperations(vector<int>& nums, int k) {
        int sum = 0;
        for(int num : nums) sum += num;
        return sum % k;
    }
};
