PROBLEM  NUMBER                                                                           :                                                      1277. Count Square Submatrices with All Ones


// Wednesday, 20 August 2025


// Dynamic Programming | Matrix

class Solution {
public:
    int countSquares(vector<vector<int>>& matrix) {
        int m = matrix.size();
        int n = matrix[0].size();
        vector<vector<int>> dp(m, vector<int>(n, 0));
        int total = 0;

        for (int i = 0; i < m; i++) {
            for (int j = 0; j < n; j++) {
                if (matrix[i][j] == 1) {
                    if (i == 0 || j == 0) {
                        dp[i][j] = 1;  // first row/col
                    } else {
                        dp[i][j] = 1 + min({dp[i-1][j], dp[i][j-1], dp[i-1][j-1]});
                    }
                    total += dp[i][j];
                }
            }
        }
        return total;
    }
};
