PROBLEM   NUMBER                    :                                 1523. Count Odd Numbers in an Interval Range


// Sunday, 7 December 2025


// Number Theory | Math

class Solution {
public:
    int countOdds(int low, int high) {
        return (high + 1) / 2 - (low / 2);
    }
};


////////////////////////////////////////////////////////////////////  OR     /////////////////////////////////////////

class Solution {
public:
    int countOdds(int l, int h) {
        if(l&1)return (h-l+2)/2;
        return (h-l+1)/2;
    }
};
