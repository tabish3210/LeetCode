PROBLEM   NUMBER                 :                3315. Construct the Minimum Bitwise Array II

// Wednesday, 21 January 2026

// Bitwise Operation 

class Solution {
public:
    vector<int> minBitwiseArray(vector<int>& nums) {
        for (int& x : nums) {
            int res = -1;
            int d = 1;
            while ((x & d) != 0) {
                res = x - d;
                d <<= 1;
            }
            x = res;
        }
        return nums;
    }
};
