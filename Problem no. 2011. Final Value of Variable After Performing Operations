PROBLEM   NUMBER                                                            :                                               2011. Final Value of Variable After Performing Operations


// 
//  Monday, 20 October 2025

// Simulation

#include <vector>
#include <string>
using namespace std;

class Solution {
public:
    int finalValueAfterOperations(vector<string>& operations) {
        int X = 0;
        for (const string &op : operations) {
            if (op.find('+') != string::npos) X++;
            else X--;
        }
        return X;
    }
};
