PROBLEM   NUMBER                                   :              1018. Binary Prefix Divisible By 5


// Monday, 24 November 2025


//  Bit Manipulation

class Solution {
public:
    vector<bool> prefixesDivBy5(vector<int>& nums) {
        int val = 0;
        vector<bool> res;

        for (auto& n : nums) {
            val = ((val << 1) + n) % 5;
            res.push_back(val == 0);
        }

        return res;
    }
};
