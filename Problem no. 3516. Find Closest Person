PROBLEM   NUMBER                                                                                    :                                                3516. Find Closest Person


// Thursday, 4 September 2025


// Bit Manipulation || Math

class Solution {
public:
    int findClosest(int x, int y, int z) {
        int d1 = abs(x - z);
        int d2 = abs(y - z);
        
        if (d1 < d2)
            return 1;
        else if (d2 < d1)
            return 2;
        else
            return 0;
    }
};
