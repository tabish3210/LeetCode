PROBLEM NUMBER                                            :                                              2221. Find Triangular Sum of an Array


// Tuesday, 30 September 2025


// Combinatorics | Number Theory ||  Pascal's triangle coefficients

#include <vector>

using namespace std;

class Solution {
public:
    int triangularSum(vector<int>& nums) {
        int n = nums.size();
        for (int size = n; size > 1; --size) {
            for (int i = 0; i < size - 1; ++i) {
                nums[i] = (nums[i] + nums[i + 1]) % 10;
            }
        }
        return nums[0];
    }
};
